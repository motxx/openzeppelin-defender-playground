    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "typechain:demo-erc20": "typechain --target=ethers-v5 ./artifacts/contracts/DemoERC20.sol/DemoERC20.json --out-dir ./typechain/",
    "typechain:forwarder": "typechain --target=ethers-v5 ./artifacts/@openzeppelin/contracts/metatx/MinimalForwarder.sol/MinimalForwarder.json --out-dir ./typechain/",
    "typechain": "yarn typechain:demo-erc20 && yarn typechain:forwarder",
    "deploy:sokol": "hardhat run scripts/deploy.ts --network sokol",
    "deploy:goerli": "hardhat run scripts/deploy.ts --network goerli",
    "build": "rm -rf ./build/ && mkdir -p ./build/relay/ && yarn --silent hardhat run ./scripts/build.ts > ./build/relay/index.js",
    "upload": "yarn build && ts-node scripts/upload.ts",
    "sign": "ts-node ./scripts/sign.ts",
    "invoke": "bash ./scripts/invoke.sh",
    "invoke:with-sign": "yarn sign && yarn invoke",
    "relay": "node scripts/relay.js"
  }
}
